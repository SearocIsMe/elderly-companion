{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RouterAgentIntent",
  "type": "object",
  "required": [
    "intent"
  ],
  "properties": {
    "intent": {
      "type": "string",
      "enum": [
        "smart.home",
        "assist.move",
        "call.emergency",
        "media.play",
        "ask.clarification"
      ]
    },
    "device": {
      "type": "string"
    },
    "action": {
      "type": "string"
    },
    "room": {
      "type": "string"
    },
    "target": {
      "type": "string"
    },
    "speed": {
      "type": "string",
      "enum": [
        "slow",
        "normal",
        "fast"
      ]
    },
    "callee": {
      "type": "string"
    },
    "reason": {
      "type": "string"
    },
    "mood": {
      "type": "string"
    },
    "playlist": {
      "type": "string"
    },
    "require_confirm": {
      "type": "boolean"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "need": {
      "type": "string"
    },
    "ask": {
      "type": "string"
    }
  },
  "additionalProperties": false
}